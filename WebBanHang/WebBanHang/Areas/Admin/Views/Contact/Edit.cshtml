@model WebBanHang.Models.ContactModel
@{
    ViewData["Title"] = "Edit Contact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit Contact</h1>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Map</label>
            <input asp-for="Map" class="form-control" />
            <span asp-validation-for="Map" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ImageUpload">Logo</label>
            <input asp-for="ImageUpload" type="file" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            <img width="100px" height="100px" src="~/media/logos/@Model.Logo" alt="">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Gmail</label>
            <input asp-for="Gmail" class="form-control" />
            <span asp-validation-for="Gmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>

    <a asp-action="Index">Back to List Product</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
