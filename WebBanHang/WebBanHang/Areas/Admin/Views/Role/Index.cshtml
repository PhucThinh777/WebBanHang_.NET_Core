@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Paginate pager = new Paginate();
    // int pageNo = 0;
    // if (ViewBag.Pager != null)
    // {
    //     pager = ViewBag.Pager;
    //     pageNo = pager.CurrentPage;
    // }
}

<h4>Role List</h4>
<a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Role">Add Role</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Role Name</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Name</td>
                <td></td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
