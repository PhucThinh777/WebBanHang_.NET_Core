@model IEnumerable<CompareViewModel>
@{
    ViewData["Title"] = "Compare List";
    var key = 0;
}

<h4>List Compare</h4>
@if (Model == null || !Model.Any())
{
    <div style="text-align:center">
        <h1>Mục so sánh đang trống</h1>
        <a asp-action="Index" asp-controller="Home">Thêm sản phẩm để so sánh ❤️</a>
    </div>
}
else
{
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                key++;
                <tr>
                    <th scope="row">@key</th>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td><img width="100px" height="100px" src="~/media/products/@item.Image" alt="@item.ProductName"></td>
                    <td>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-id="@item.CompareId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
