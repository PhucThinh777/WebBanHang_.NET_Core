@model AppUserModel
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit User</h1>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>UserName</label>
            <input asp-for="UserName" required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control"></input>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>PhoneNumber</label>
            <input asp-for="PhoneNumber" required class="form-control"></input>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>PasswordHash</label>
            <input asp-for="PasswordHash" readonly required class="form-control"></input>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Status</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>

    <a asp-action="Index">Back to List User</a>
</div>
@section Stripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
