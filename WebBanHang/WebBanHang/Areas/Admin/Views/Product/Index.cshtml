@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4>List Product</h4>
<a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Product">Add Prodcut</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Sold</th>
            <th scope="col">Image</th>
            <th scope="col">Slug</th>
            <th scope="col">Category</th>
            <th scope="col">Brand</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="@(item.Quantity == 0 ? "background-color: lightgray;" : "")">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                @if (item.Quantity == 0)
                {
                    <td style="color: red">
                        ⚠️Hết hàng⚠️
                        <br />
                        <br />
                        <a asp-action="AddQuantity" asp-controller="Product" asp-route-Id="@item.Id">Thêm số lượng</a>
                    </td>
                }
                else
                {
                    <td>
                        <b style="color: green">Còn @item.Quantity sản phẩm</b>
                        <br />
                        <br />
                        <a asp-action="AddQuantity" asp-controller="Product" asp-route-Id="@item.Id">Thêm số lượng</a>
                    </td>
                }

                <td><b>@item.Sold</b></td>
                <td><img width="100px" height="100px" src="~/media/products/@item.Image" alt=""></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
